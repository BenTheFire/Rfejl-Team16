@page "/login"
@using TicketMaster.Data.DTOs;
@using TicketMaster.Data.Services.Interfaces;
@inject ILoginService ILS

<body>
    <div class="login-container">
        <form @onsubmit="SubmitEvent" method="post" class="login-form">
            <h4>Login</h4>  
            <input type="text" placeholder="Username" @bind-value="Model.Username" class="input-field" />  
            <input type="password" placeholder="Password" @bind-value="Model.Password" class="input-field" />  
            <button type="submit" class="submit-button" >Login</button>  
        </form>  

        @if (valid)  
        {  
            <p class="success-message">Successful login</p>  
            @if (isAdmin)  
            {  
                <p class="admin-message">(admin login)</p>  
            }
            else if (isVendor)
            {
                <p class="admin-message">(vendor login)</p>
            }
        }  
        @if (valid == false && tried == true) {
                <p class="failed-message">Login failed</p>
            }
    </div>
</body>

@code {

    public bool valid = false;  
    public bool isAdmin = false;
    public bool isVendor = false;
    public bool tried = false;
    private LoginUserDTO Model { get; set; }

    public void SubmitEvent()
    {
        tried = true;
        valid = ILS.LoginUser(ref isAdmin, ref isVendor, Model);
    }

    protected override void OnInitialized() {  
        Model = new();  
    }
}  

<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #1a1a1a; /* Dark Background */
    }

    .login-form {
        background-color: #333; /* Dark Card Style */
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3);
        width: 300px;
        text-align: center;
        color: #f1f1f1; /* Light Text */
    }

    .login-form h1 {
        color: #ffd700; /* Gold Accent */
        font-size: 24px;
        margin-bottom: 15px;
    }

    .input-field {
        width: 100%;
        padding: 10px;
        background-color: #444; /* Dark Input */
        border: 1px solid #555;
        border-radius: 6px;
        color: #fff;
        margin-bottom: 15px;
    }

    .input-field:focus {
        border-color: #ffd700; /* Gold Border on Focus */
        outline: none;
    }

    .submit-button {
        width: 100%;
        padding: 10px;
        background-color: #ffd700; /* Gold Button */
        color: #333;
        border: none;
        border-radius: 6px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .submit-button:hover {
        background-color: #e6c200; /* Slightly Darker Gold */
    }

    .submit-button:disabled {
        background-color: #999;
        cursor: not-allowed;
    }

    .success-message {
        color: #32cd32; /* Success Green */
        margin-top: 10px;
        font-weight: bold;
    }

    .admin-message {
        color: #007bff; /* Blue for Admin */
